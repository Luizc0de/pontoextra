        loginButton.addActionListener(new java.awt.event.ActionListener() {
            public void actionPerformed(java.awt.event.ActionEvent evt) {
                String user = userText.getText();
                String password = new String(passwordText.getPassword());
                if (user.equals("admin") && password.equals("admin123")) {
                    JOptionPane.showMessageDialog(window, "Login bem-sucedido!");
                } else {
                    JOptionPane.showMessageDialog(window, "Usu√°rio ou senha incorretos.");
                }
            }
        });



private void calcular(){
        String valor2 = display.getText();
        double resultado = 0;
        switch(operador){
            case '+':
                resultado = Double.parseDouble(valor1) + Double.parseDouble(valor2);
                break;
            case '-':
                resultado = Double.parseDouble(valor1) - Double.parseDouble(valor2);
                break;
            case '*':
                resultado = Double.parseDouble(valor1) * Double.parseDouble(valor2);
                break;
            case '/':
                resultado = Double.parseDouble(valor1) / Double.parseDouble(valor2);
                break;
        }
        display.setText(String.valueOf(resultado));
    }